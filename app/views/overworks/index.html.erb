<h1>Listing overworks</h1>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Date</th>
      <th>Subject</th>
      <th>Start</th>
      <th>Finish</th>
      <th>Hours</th>
      <th>Comment</th>
<!--
      <th></th>
      <th></th>
      <th></th>
-->
    </tr>
  </thead>

  <tbody>
  <% (@ms..@me).each do |d| %>
      <tr <%= case d.wday; when 0; 'class=sunday' when 6; 'class=saturday'; end %>>
        <% overwork = @overworks[d] %>
        <% if overwork == nil then %>
        <td><%= link_to d.strftime('%Y/%m/%d（%a）'), new_overwork_path(work_date: d) %></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        <% else %>
        <td><%= link_to overwork.work_date.strftime('%Y/%m/%d（%a）'), edit_overwork_path(overwork) %></td>
        <td><%= overwork.subject %></td>
        <td><%= overwork.work_start_time.strftime('%H:%M') %></td>
        <td><%= overwork.work_finish_time.strftime('%H:%M') %></td>
        <td><%= sprintf( '%.2f', overwork.work_hours) %></td>
        <td><%= overwork.comment %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

